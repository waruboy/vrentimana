
<h2> Pencarian: <%= @query %></h2>
<div class="col-md-6">
  <% if @success %>
    <p><%= @location["formatted_address"] %></p>
    <p><%= "(#{@lat}, #{@lng})" %></p>
    <div style='width: 800px;'>
      <div id="map" style='width: 800px; height: 400px;'></div>
    </div>

    <br>

    <div class="panel panel-default">
      
      <div class="panel-heading">
        <h3 class="panel-title">Halte Transjakarta terdekat <span class="badge pull-right"><%= @stops.count(:all) %></span> </h3>
      </div>
      <div class="panel-body">  
        <% if @stops.empty? %>
          <div class="alert alert-warning">
            <p>Tidak ada halte di sekitar lokasi</p>
          </div>
        <% end %>


        <% @stops.each do |stop| %>

          <%= "#{stop.name} (#{stop.distance.round(1)} km)" %>
          <br>

        <% end %>

        <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
        <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

        <script type="text/javascript">
        handler = Gmaps.build('Google');
        handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
          markers = handler.addMarkers(<%=raw @hash.to_json %>);
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
        });
        </script>
      <% else %>
        <div class="alert alert-warning">
          <p> Lokasi "<%= @query %>" tidak ditemukan di Jakarta</p>
        </div>
      </div>
    </div>

    <% end %>

</div>