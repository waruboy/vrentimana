<h1>Brentimana</h1>

<div class="row">
  <div class="panel panel-body">
    <div class="col-lg-12">
      <%= form_tag("/search", method: "get", class: "input-group") do %>
        <%#= label_tag(:q, "Halte terdekat dari:") %>
        <%= text_field_tag(:q, '', {class: "form-control", value: @query, placeholder: "Halte terdekat dari:"}) %>
        <span class="input-group-btn">
          <%= submit_tag("Cari", class: "btn btn-default") %>
        </span>
      <% end %>
    </div>
  </div>
</div> 
